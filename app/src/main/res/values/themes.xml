<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ResizeVideo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/maintream</item>
        <item name="colorPrimaryDark">@color/maintream</item>
        <item name="colorSecondary">@color/maintream</item>
    </style>

    <style name="label_select">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="description_select">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="textMain">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.ResizeVideo" parent="Base.Theme.ResizeVideo" />
</resources>